<LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:minHeight="64dp" android:orientation="horizontal" android:paddingLeft="@dimen/account_chooser_dialog_item_margin" android:paddingRight="@dimen/account_chooser_dialog_item_margin" xmlns:android="http://schemas.android.com/apk/res/android">
  
    
